vgsms.35-212-241-214.nip.io {
  encode gzip

  # health check
  handle /lb-health {
    respond "ok" 200
  }

  # gateway -> VGSMS
  handle /v1/* {
    reverse_proxy gateway:8085
  }

  # gateway -> TransactionService
  handle /transactionservice/v1/* {
    reverse_proxy gateway:8085
  }

  # Vue SPA
  handle {
    root * /srv
    try_files {path} /index.html
    file_server
  }
}
